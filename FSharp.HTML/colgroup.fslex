%{
open System
open FSharp.HTML
open FSharp.HTML.ColgroupTokenUtils
type token = HtmlToken
%}

any = COMMENT|TEXT|CDATA|EOF
    | TAGSTART
    | TAGEND
    | TAGSELFCLOSING
    | WS
    | ["<colgroup>" "</colgroup>" "<col/>"]
%%

["<colgroup>" "<col/>"] [COMMENT WS]* / "<col/>"    { lexbuf }
["<colgroup>" "<col/>"] [COMMENT WS]* "</colgroup>" { lexbuf }

<any> / "<col/>" { lexbuf @ [ TagStart("colgroup",[]) ] }
"<col/>"         { lexbuf @ [ TagEnd "colgroup" ] }
<any>            { lexbuf }

